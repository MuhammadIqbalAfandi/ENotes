<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorControlActivated">?attr/colorOnSecondary</item>
        <item name="android:windowLightStatusBar">true</item>

        <!--    Global shape attributes.    -->
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/AppShapeAppearance.LargeComponent</item>
        <!--    Global Text Appearance Body 2 style attribute    -->
        <!--        <item name="textAppearanceBody2">@style/AppTextAppearanceBody2</item>-->
        <!--    Global Text Field widget style attribute.     -->
        <item name="textInputStyle">@style/AppTextField</item>
        <!--    Global Card widget style attribute.     -->
        <item name="materialCardViewStyle">@style/AppCard</item>
        <!--    Global Dialog widget style attribute.    -->
        <item name="materialAlertDialogTheme">@style/AppThemeOverlay.Dialog</item>
        <!--    Global Button widget style attribute.    -->
        <item name="materialButtonStyle">@style/AppMaterialButton</item>
    </style>

    <!--  Text Field widget style attribute. -->
    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@null</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@color/text_layout_box_background_color</item>
        <item name="hintTextColor">?attr/colorOnSecondary</item>
        <item name="hintTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
    </style>

    <style name="AppTextField.Note">
        <item name="boxBackgroundColor">@null</item>
    </style>

    <!--  Button widget style attribute.  -->
    <style name="AppMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_btn_text_color_selector</item>
        <item name="iconTint">@color/text_btn_text_color_selector</item>
        <item name="backgroundTint">@color/btn_bg_color_selector</item>
    </style>

    <style name="AppMaterialButton.Icon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/text_btn_text_color_selector</item>
        <item name="android:textColor">@color/text_btn_text_color_selector</item>
        <item name="backgroundTint">@color/btn_text_btn_bg_color_selector</item>
    </style>

    <style name="AppMaterialButton.Icon.Text">
        <item name="android:textAppearance">@style/AppTextAppearance.MaterialButton.Icon.Text</item>
    </style>

    <style name="AppTextAppearance.MaterialButton.Icon.Text" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <!--  Card widget style attribute.  -->
    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/card_view_background_color</item>
    </style>

    <!--  Dialog widget style attribute.  -->
    <style name="AppThemeOverlay.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/AppButtonBarStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppButtonBarStyle</item>
        <!--        <item name="materialAlertDialogBodyTextStyle">-->
        <!--            @style/AppTextAppearance.MaterialAlertDialog.Body-->
        <!--        </item>-->
        <!--        <item name="materialAlertDialogTitleTextStyle">-->
        <!--            @style/AppTextAppearance.MaterialAlertDialog.Title-->
        <!--        </item>-->
    </style>

    <style name="AppButtonBarStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_btn_text_color_dialog_selector</item>
    </style>

<!--    <style name="AppTextAppearance.MaterialAlertDialog.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">-->
<!--        <item name="android:textColor">@color/warning_color_emphasis_high</item>-->
<!--    </style>-->

<!--    <style name="AppTextAppearance.MaterialAlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">-->
<!--        <item name="android:textColor">@color/warning_color_emphasis_high</item>-->
<!--    </style>-->

    <!--  Text Appearance style attribute.  -->
    <!--    <style name="AppTextAppearanceBody2" parent="TextAppearance.MaterialComponents.Body2">-->
    <!--        <item name="android:textColor">?android:textColorSecondary</item>-->
    <!--    </style>-->

    <!--  Shape Appearance style attribute.  -->
    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>